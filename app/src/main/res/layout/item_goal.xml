<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="goal"
            type="com.example.keshl.mymotivation.domain.GoalModel" />

        <variable
            name="event"
            type="com.example.keshl.mymotivation.presentation.goal.GoalsContract.EventListener" />

    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/goalItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_left_right_create_goal"
        android:onClick="@{()->event.onGoalClick(goal)}">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvGoalTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{goal.title}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvGoalDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@{goal.description}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvGoalTitle" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>